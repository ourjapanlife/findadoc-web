{
    "extends": "./.nuxt/tsconfig.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "@0no-co/graphqlsp",
                "schema": "typedefs/schema.graphql"
            }
        ],
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "esnext",
            "DOM"
        ],
        "strict": true,
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "esm": true,
        "swc": true
    },
    "include": [
        "./**/*"
    ],
    "exclude": [
        "./node_modules",
        // Ignore autogenerated GraphQL code
        "./typedefs",
    ]
}
