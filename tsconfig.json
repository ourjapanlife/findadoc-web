{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "esnext",
            "DOM"
        ],
        "paths": {
            "~/*": ["./*"],
            "@/*": ["./*"]
        },
        "strict": true,
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "esm": true,
        "swc": true
    },
    "include": [
        "./**/*",
        "utils/**/*",
        "__tests__/*",
        "typesgeneratorconfig.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
