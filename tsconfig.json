{
    "extends": "./.nuxt/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "esnext",
            "DOM"
        ],
        "strict": true,
        "outDir": "dist",
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "ts-node": {
        "esm": true,
        "swc": true
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        // Ignore autogenerated GraphQL code
        "typedefs",
    ]
}
